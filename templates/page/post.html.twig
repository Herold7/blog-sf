{% extends 'base.html.twig' %}

{% block title %}
{{ post.title }}
{% endblock %}

{% block body %}
<div class="container">
		<h1 class="text-center mt-5">{{ post.title }}</h1>
		<img class="my-5" src="{{ post.image }}" alt="Post image">

		<p class="lead text-center">{{ post.content }}</p>

		<p class="text-muted mt-4">
			Publi√© le
			{{ post.createdAt|date('d/m/Y') }}
			par
			{{ post.author.nickname }}
		</p>
	</div>
	<div class="d-flex gap-2 justify-content-center pb-3">
		<a href={{ path('post_new') }} class="btn btn-primary">Ajouter</a>
		<a href={{ path('post_edit', {'slug': post.slug}) }} class="btn btn-success">Modifier</a>
		<a href={{ path('home') }} class="btn btn-dark">Retour</a>

	</div>




{% endblock %}
